@model CofeeShop.Models.CountryModel


<main id="main" class="main">
    <div class="pagetitle">
        <h1>Country Form</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item"><a asp-controller="Country" asp-action="CountryList">Countries</a></li>
                <li class="breadcrumb-item active">Country Form</li>
            </ol>
        </nav>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <h4 class="text-success">@TempData["CountryInsertMessage"]</h4>
                        <form class="form-horizontal"
                              method="post"
                              asp-action="Save">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <input asp-for="CountryID" hidden />

                           
                            <div class="form-group">
                                <label for="CountryName" class="col-md-3 control-label"><span class="text-danger">*</span>Country Name</label>
                                <div class="col-md-9">
                                    <input type="text"
                                           id="CountryName"
                                           name="CountryName"
                                           class="form-control"
                                           asp-for="CountryName"
                                           placeholder="Enter Country Name" />
                                    <span asp-validation-for="CountryName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="CountryCode" class="col-md-3 control-label"><span class="text-danger">*</span>Country Code</label>
                                <div class="col-md-9">
                                    <input type="text"
                                           id="CountryCode"
                                           name="CountryCode"
                                           class="form-control"
                                           asp-for="CountryCode"
                                           placeholder="Enter Country Code" />
                                    <span asp-validation-for="CountryCode" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-3 col-md-9">
                                    <button type="submit" class="btn btn-success">Save</button>
                                    <a class="btn btn-default"
                                       asp-controller="Country"
                                       asp-action="CountryList">Cancel</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>