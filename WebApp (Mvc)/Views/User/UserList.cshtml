@model DataTable;
@using System.Data;

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Tables</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item">User</li>
                <li class="breadcrumb-item active">User List</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">User List</h5>
                        <div align="right">
                            <a asp-controller="User" asp-action="UserForm" class="btn btn-primary">Add</a>
                            <a asp-controller="User" asp-action="DownloadUserListCsv" class="btn btn-success">Export To Csv</a>
                        </div>
                        <span class="text-danger">@TempData["ErrorMessage"]</span>
                        <!-- Table with stripped rows -->
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>User Id</th>
                                    <th>User Name</th>
                                    <th>Email</th>
                                    <th>Password</th>
                                    <th>Mobile No</th>
                                    <th>Address</th>
                                    <th>IsActive</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (DataRow user in Model.Rows)
                                {
                                    <tr>
                                        <td>@user["UserID"]</td>
                                        <td>@user["UserName"]</td>
                                        <td>@user["Email"]</td>
                                        <td>@user["Password"]</td>
                                        <td>@user["MobileNo"]</td>
                                        <td>@user["Address"]</td>
                                        <td>@user["IsActive"]</td>
                                        <td>
                                            <a class="btn btn-outline-warning btn-xs" asp-controller="User" asp-action="UserForm" asp-route-UserID="@user["UserID"]">
                                                <i class="bi bi-pencil-fill"></i>
                                            </a>
                                        </td>
                                        <td>
                                            <form method="post" asp-controller="User" asp-action="UserDelete" onsubmit="return confirm('Are You Sure you want to Delete?')">
                                                <input type="hidden" name="UserID" value="@user["UserID"]" />
                                                <button type="submit" class="btn btn-outline-danger btn-xs">
                                                    <i class="bi bi-x"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->