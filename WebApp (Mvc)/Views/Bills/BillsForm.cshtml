@model             BillsModel

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Bill Form</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item"><a asp-controller="Bills" asp-action="BillsList">Bills</a></li>
                <li class="breadcrumb-item active">Bill Form</li>
            </ol>
        </nav>
    </div>

    <section class="section">
        <div class="card">
            <div class="card-body">

                <form asp-action="BillsSave" method="post" class="row g-3">
                    <input asp-for="BillID" hidden />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="col-md-6">
                        <label asp-for="BillNumber" class="form-label"></label>
                        <input asp-for="BillNumber" class="form-control" />
                        <span asp-validation-for="BillNumber" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="BillDate" class="form-label"></label>
                        <input asp-for="BillDate" class="form-control" type="date" />
                        <span asp-validation-for="BillDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="OrderID" class="form-label"></label>
                        <select class="form-control" asp-for="OrderID" asp-items="@(new SelectList(ViewBag.OrderList, "OrderID", "OrderID"))">
                            <option value="">Select Order</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="TotalAmount" class="form-label"></label>
                        <input asp-for="TotalAmount" class="form-control" />
                        <span asp-validation-for="TotalAmount" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Discount" class="form-label"></label>
                        <input asp-for="Discount" class="form-control" />
                        <span asp-validation-for="Discount" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="NetAmount" class="form-label"></label>
                        <input asp-for="NetAmount" class="form-control" />
                        <span asp-validation-for="NetAmount" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="UserID" class="form-label"></label>
                        <select class="form-control" asp-for="UserID" asp-items="@(new SelectList(ViewBag.UserList, "UserID", "UserName"))">
                            <option value="">Select User</option>
                        </select>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <button type="reset" class="btn btn-secondary">Reset</button>
                    </div>
                </form>
            </div>
        </div>
    </section>

</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
